<h1>Places</h1>

<% if @current_user %>
  <ul>
    <% for place in @places %>
      <li><a href="/places/<%= place.id %>"><%= place.name %></a></li>
    <% end %>
  </ul>

  <p>
    <a href="/places/new" class="btn btn-primary" role="button">New Place</a>
  </p>
<% else %>
  You must first <a href="/sessions/new">login</a> to post.
<% end %>