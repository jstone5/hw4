<h1><%= @place.name %></h1>

<% if @current_user %>
  <h2>My Posts</h2>
  <% for post in @place.posts %>
    <% if post.user_id == @current_user.id %>
      <h3><%= post.title %></h3>
      <h4><%= post.posted_on %></h4>
      <p><%= post.description %></p>
    <% end %>
  <% end %>

  <p>
    <a href="/posts/new?place_id=<%= @place.id %>" class="btn btn-primary" role="button">New Post</a>
  </p>
<% end %>

<p>
  <a href="/places" class="btn btn-outline-primary" role="button">Back to All Places</a>
</p>